<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fl_home_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:background="@drawable/bottom_tab_layout_bg"
        >

        <TextView
            android:id="@+id/tv_HomeAtHome"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="首页"
            android:gravity="center"
            android:textSize="13sp"
            android:drawableTop="@drawable/tab_home_icon"
            android:drawablePadding="3dp"
            android:textColor="@color/color_bottom_tv"
            />
        <TextView
            android:id="@+id/tv_HomeAtProject"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="项目"
            android:gravity="center"
            android:textSize="13sp"
            android:drawableTop="@drawable/tab_project_icon"
            android:drawablePadding="3dp"
            android:textColor="@color/color_bottom_tv"
            />
        <TextView
            android:id="@+id/tv_ProjectAtAccount"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="公众号"
            android:gravity="center"
            android:textSize="13sp"
            android:drawableTop="@drawable/tab_account_icon"
            android:drawablePadding="3dp"
            android:textColor="@color/color_bottom_tv"
            />
        <TextView
            android:id="@+id/tv_ProjectAtMine"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="我的"
            android:gravity="center"
            android:textSize="13sp"
            android:drawableTop="@drawable/tab_mine_icon"
            android:drawablePadding="3dp"
            android:textColor="@color/color_bottom_tv"
            />
    </LinearLayout>
</FrameLayout>